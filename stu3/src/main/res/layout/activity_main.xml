<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.dream.xukuan.stu3.MainActivity"
    android:padding="10dp">

    <Button
        android:id="@+id/goTo1"
        android:onClick="goTo1"
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="跳转第一个activity"/>
    <Button
        android:id="@+id/goTo2"
        android:onClick="goTo2"
        android:layout_width="200dp"
        android:layout_below="@+id/goTo1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:text="跳转第二个activity"/>
    <Button
        android:id="@+id/goTo3"
        android:onClick="goTo3"
        android:layout_width="200dp"
        android:layout_below="@+id/goTo2"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:text="跳转第三个activity"/>
    <Button
        android:onClick="goTo4"
        android:layout_width="200dp"
        android:layout_below="@+id/goTo3"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:text="跳转第四个activity"/>



</RelativeLayout>
